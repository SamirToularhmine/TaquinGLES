<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuPrincipalActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/taille_text" />


    <RadioGroup
        android:id="@+id/radiogroup_taille"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/radioButton_33"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:drawableBottom="@drawable/taquin_33"
            android:gravity="center"
            android:text="3 x 3" />


        <RadioButton
            android:id="@+id/radioButton_44"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:drawableBottom="@drawable/taquin_44"
            android:gravity="center"
            android:text="4 x 4" />


        <RadioButton
            android:id="@+id/radioButton_55"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:drawableBottom="@drawable/taquin_55"

            android:gravity="center"
            android:text="5 x 5" />


    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/niveau" />

    <RadioGroup
        android:id="@+id/radiogroup_niveau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">


        <RadioButton
            android:id="@+id/radioButton_facile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/facile" />

        <RadioButton
            android:id="@+id/radioButton_moyen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/moyen" />

        <RadioButton
            android:id="@+id/radioButton_difficile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/difficile" />
    </RadioGroup>

    <Button
        android:id="@+id/commencer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="lancerJeu"
        android:text="@string/commencer" />
</LinearLayout>